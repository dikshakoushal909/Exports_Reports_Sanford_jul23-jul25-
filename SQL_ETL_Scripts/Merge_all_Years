-----Combine all years into a single view for FY23â€“FY25-----

CREATE VIEW [dbo].[vw_Product_All_Years_WithYear] AS
SELECT
    *,
    CASE 
        WHEN Financial_Year = 'FY23' THEN 2023
        WHEN Financial_Year = 'FY24' THEN 2024
        WHEN Financial_Year = 'FY25' THEN 2025
        ELSE NULL
    END AS YearNum
FROM Product_All_Years;
GO
